


datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Genre {
  ROCK
  RAP
  COUNTRY 
  KPOP 
  HIPHOP
  RNB
}

model users {
  id    Int     @id @default(autoincrement())
  username String  @unique
  email String
  name  String?
  password String 
}

model album {
    id    Int     @id @default(autoincrement())
    name  String 
    description String
    artist String
    genre Genre   //using enum//
    release_date DateTime
    imageURL  String
}

generator client {
  provider = "prisma-client-js"
}

